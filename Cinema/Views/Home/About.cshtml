@model Cinema.Models.ContactForm
@{
    ViewBag.Title = "About Us";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/aboutus.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/Shared/_Layout.csthml.css" />

<div class="overlay">
    <div class="film-strip top"></div>

    <div class="content-container">
        <!-- Header -->
        <div class="container py-5 text-center fade-in">
            <h1 class="cinema-title display-4 fw-bold">Starluxe Cinema</h1>
            <p class="lead fst-italic">Experience movies like never before — comfort, quality, and magic on the big screen!</p>
            <hr class="mx-auto w-25 mb-4 border-light">
        </div>

        <!-- Mission & Vision -->
        <div class="container fade-in">
            <div class="row text-center mb-5">
                <div class="col-md-6 mb-4 mb-md-0">
                    <div class="p-4 bg-dark bg-opacity-75 rounded shadow-sm h-100">
                        <h3 class="text-warning">Our Mission</h3>
                        <p class="text-white">To bring the best cinematic experiences with state-of-the-art halls, immersive sound, and the latest blockbusters.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-4 bg-dark bg-opacity-75 rounded shadow-sm h-100">
                        <h3 class="text-warning">Our Vision</h3>
                        <p class="text-white">To be the favorite cinema in town, where every movie lover feels at home and enjoys unforgettable moments.</p>
                    </div>
                </div>
            </div>

            <!-- Team -->
            <div class="mb-5">
                <h2 class="text-center mb-5 text-warning">Meet Our Team</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @* Team Card *@
                    <div class="col">
                        <div class="card h-100 text-center bg-dark text-white shadow-lg team-card">
                            <img src="~/images/secretary-holding-pen.jpg" class="card-img-top team-img" alt="Alice Johnson">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Alice Johnson</h5>
                                <p class="card-text">Cinema Manager</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 text-center bg-dark text-white shadow-lg team-card">
                            <img src="~/images/computer-scientist-data-center-doing-software-updates-verifying-metrics.jpg" class="card-img-top team-img" alt="Bob Smith">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Bob Smith</h5>
                                <p class="card-text">Head of Operations</p>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card h-100 text-center bg-dark text-white shadow-lg team-card">
                            <img src="~/images/social-media-marketing-concept-marketing-with-applications.jpg" class="card-img-top team-img" alt="Clara Lee">
                            <div class="card-body">
                                <h5 class="card-title text-warning">Clara Lee</h5>
                                <p class="card-text">Marketing & Events</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Alerts -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center fw-bold">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center fw-bold">@TempData["Error"]</div>
            }

            <!-- Contact Form -->
            <div class="contact-form-container p-5 rounded bg-dark bg-opacity-75 shadow-lg">
                <h2 class="text-center text-warning mb-4">Contact Us</h2>
                @using (Html.BeginForm("About", "Home", FormMethod.Post, new { @class = "contact-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label text-white" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg", placeholder = "Your name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label text-white" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Your email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Message, new { @class = "form-label text-white" })
                        @Html.TextAreaFor(m => m.Message, 5, 50, new { @class = "form-control form-control-lg", placeholder = "Your message" })
                        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold px-5">Send Message</button>
                    </div>
                }
            </div>
            <h3 class="text-warning">Location: </h3>
            <p>“Galaxy Mall”, Cinema Street 5, Sofia</p>

            <iframe src="https://www.google.com/maps?q=Galaxy+Mall,+Sofia&output=embed"
                    width="100%" height="400" style="border:0; border-radius:12px;"
                    allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>

    <div class="film-strip bottom"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}