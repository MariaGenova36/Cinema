@{
    ViewData["Title"] = "Success";
}

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow-lg p-4 text-center" style="max-width: 600px;">
        <div class="mb-3">
            <span class="display-1 text-success">✔</span>
        </div>
        <h2 class="text-success">Reservation Confirmed!</h2>
        <p class="lead">Thank you for your reservation. Your ticket is now active.</p>

        <hr />

        <p>
            You can view your tickets anytime in
            <a asp-controller="Profile" asp-action="Index" class="fw-bold">your profile</a>.
        </p>

        <div class="mt-4">
            <a asp-controller="Projections" asp-action="Index" class="btn btn-primary me-2">
                Back to Projections
            </a>
        </div>
    </div>
</div>
