@model Cinema.Models.Projection

@{
    ViewData["Title"] = "Delete Projection";
}

<h1>Delete Projection</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Projection</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Movie</dt>
        <dd class="col-sm-10">@Model.Movie?.Title</dd>

        <dt class="col-sm-2">Hall</dt>
        <dd class="col-sm-10">@Model.Hall?.Name</dd>

        <dt class="col-sm-2">Projection Time</dt>
        <dd class="col-sm-10">@Model.ProjectionTime.ToString("dd.MM.yyyy HH:mm")</dd>

        <dt class="col-sm-2">Ticket Price</dt>
        <dd class="col-sm-10">@Model.TicketPrice.ToString("C")</dd>

        <dt class="col-sm-2">Available Seats</dt>
        <dd class="col-sm-10">@Model.AvailableSeats</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
