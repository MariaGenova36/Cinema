@model Cinema.Models.Projection

@{
    ViewData["Title"] = "Create Projection";
}

<h1>Create Projection</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="MovieId"></label>
        <select asp-for="MovieId" class="form-control" asp-items="@(ViewData["MovieId"] as SelectList)"></select>
        <span asp-validation-for="MovieId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HallId"></label>
        <select id="hallSelect" asp-for="HallId" class="form-control" asp-items="@(ViewData["HallId"] as SelectList)"></select>
        <span asp-validation-for="HallId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProjectionTime"></label>
        <input asp-for="ProjectionTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ProjectionTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TicketPrice"></label>
        <input asp-for="TicketPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="TicketPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Available Seats</label>
        <input id="availableSeats" class="form-control" value="0" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById("hallSelect").addEventListener("change", function () {
            const hallId = this.value;
            fetch(`/Projections/GetSeatCount?hallId=${hallId}`)
                .then(response => response.json())
                .then(data => {
                    document.getElementById("availableSeats").value = data.seatCount;
                });
        });

       
        window.addEventListener("load", function () {
            const hallId = document.getElementById("hallSelect").value;
            if (hallId) {
                fetch(`/Projections/GetSeatCount?hallId=${hallId}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById("availableSeats").value = data.seatCount;
                    });
            }
        });
    </script>
}
