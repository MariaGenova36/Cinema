@model ProfileViewModel

<link rel="stylesheet" href="~/css/profile.css" />

<h2 class="mb-4 text-center text-gold">Your Profile</h2>

<!-- User Info Card -->
<div class="card shadow-lg p-4 mb-5 bg-dark text-white rounded-3 fade-up">
    <form method="post" asp-action="Index">
        <div class="mb-3">
            <label asp-for="Email" class="form-label text-gold"></label>
            <input asp-for="Email" class="form-control bg-secondary text-white" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="FullName" class="form-label text-gold"></label>
            <input asp-for="FullName" class="form-control bg-secondary text-white" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-gold btn-lg">Save</button>

        @if (ViewData["Message"] != null)
        {
            <div class="alert alert-success mt-3">
                @ViewData["Message"]
            </div>
        }
    </form>
</div>

<hr class="border-gold" />

<!-- Tickets Table Card -->
<h3 class="mb-3 text-center text-gold">Your Tickets</h3>

@if (ViewBag.Tickets != null && ((List<Cinema.Models.Ticket>)ViewBag.Tickets).Count > 0)
{
    <div class="card shadow-lg p-4 mb-5 bg-dark text-white rounded-3 fade-up ticket-card">
        <div class="table-responsive">
            <table class="table table-dark align-middle ticket-table">
                <thead>
                    <tr class="text-gold">
                        <th>Movie</th>
                        <th>Projection Date</th>
                        <th>Seat Number</th>
                        <th>Purchase Time</th>
                        <th>Ticket Type</th>
                        <th>Price</th>
                        <th>Paid</th>
                        <th>Used</th>
                        <th>QR Code</th>
                        <th>Ticket ID</th>
                        <th>PDF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in (List<Cinema.Models.Ticket>)ViewBag.Tickets)
                    {
                        <tr class="ticket-row">
                            <td>@ticket.Projection.Movie.Title</td>
                            <td>@ticket.Projection.ProjectionTime.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>Row: @ticket.SeatRow, Seat: @ticket.SeatColumn</td>
                            <td>@ticket.PurchaseTime.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@ticket.TicketType</td>
                            <td>@ticket.Price.ToString("C")</td>
                            <td>@(ticket.IsPaid ? "Yes" : "No")</td>
                            <td>
                                @if (ticket.IsUsed)
                                {
                                    <span class="badge bg-secondary">Used</span>
                                }
                                else
                                {
                                    <span class="badge bg-gold">Valid</span>
                                }
                            </td>
                            <td class="qr-cell">
                                <img src="@Url.Action("QRCode", "Tickets", new { id = ticket.Id })" width="80" height="80" />
                            </td>
                            <td>@ticket.Id</td>
                            <td>
                                <a asp-controller="Tickets" asp-action="DownloadTicketPdf" asp-route-id="@ticket.Id"
                                   class="btn btn-sm btn-outline-gold" title="Download PDF">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h4 class="text-center text-gold">You have no tickets.</h4>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}