<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3 justify-content-between">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-secondary d-md-none me-2" id="menuToggle">☰</button>
            <a class="navbar-brand" href="#">Cinema Admin</a>
        </div>
        <a class="btn btn-outline-light" href="/">Back to site</a>
    </nav>


    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light p-3 vh-100 d-none d-md-block" id="adminSidebar">
                <h5>Admin Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Admin" asp-action="Reservations">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Genres" asp-action="Index">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Halls" asp-action="Index">Halls</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Projections" asp-action="Index">Projections</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 p-4" id="mainContent">
                @RenderBody()
            </div>
        </div>
    </div>
  

    @RenderSection("Scripts", required: false)
</body>
</html>
