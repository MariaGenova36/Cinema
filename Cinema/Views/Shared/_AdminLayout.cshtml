<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <style>
    
    </style>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark px-3 justify-content-between">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-secondary d-md-none me-2" id="menuToggle">☰</button>
            <a class="navbar-brand" href="#">Starluxe Cinema Admin</a>
        </div>
        <a class="btn btn-outline-light" href="/">Back to site</a>
    </nav>
    <style>
        /* Navbar */
        .navbar {
            background-color: #0B0C1D !important;
            border-bottom: 1px solid #2a2a3d;
            position: fixed;
            top: 0;
            left: 0;
            right : 0;
            width: 100%;
            height :56px;
            z-index: 1100; /* над sidebar */
        }

        /* Sidebar */
        #adminSidebar {
            background-color: #0B0C1D !important;
            color: #F5D38C;
            border-right: 1px solid #2a2a3d;
            transition: transform 0.3s ease;
            position: fixed;
            top: 56px; /* височина на navbar */
            left: 0;
            height: calc(100% - 56px);
            width: 220px;
            z-index: 1000;
            padding: 15px;
            overflow-y: auto;
        }

            /* Текст и линкове */
            #adminSidebar h5 {
                color: #FFE9A0;
                margin-bottom: 20px;
                font-weight: 700;
                letter-spacing: 1px;
            }

            #adminSidebar .nav-link {
                color: #F5D38C;
                font-weight: 500;
                padding: 10px 12px;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                #adminSidebar .nav-link:hover {
                    background-color: #F5D38C;
                    color: #0B0C1D;
                    transform: translateX(5px);
                }

                #adminSidebar .nav-link.active {
                    background-color: #d6a94d;
                    color: #0B0C1D;
                    font-weight: 600;
                }

        /* Main content */
        #mainContent {
            margin-left: 220px;
            padding: 20px;
            padding-top: 80px !important; /* navbar височина + малко разстояние */
        }

        /* Mobile view */
        @@media (max-width: 768px) {
            #adminSidebar

        {
            transform: translateX(-100%);
            width: 220px;
        }

        #adminSidebar.show {
            transform: translateX(0);
        }

        #mainContent {
            margin-left: 0;
            padding-top: 76px;
        }

        }
    </style>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 p-3" id="adminSidebar">
                <h5>Admin Menu</h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Admin" asp-action="Reservations">Reservations</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Movies" asp-action="Index">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Genres" asp-action="Index">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Halls" asp-action="Index">Halls</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="Admin" class="nav-link" asp-controller="Projections" asp-action="Index">Projections</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                    </li>
                </ul>
            </div>

            <!-- Main content -->
            <div class="col-md-10 p-4" id="mainContent">
                @RenderBody()
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggleButton = document.getElementById("menuToggle");
            const sidebar = document.getElementById("adminSidebar");

            if (toggleButton && sidebar) {
                // Toggle sidebar при клик на ☰
                toggleButton.addEventListener("click", function (e) {
                    e.stopPropagation(); // да не се затваря веднага
                    sidebar.classList.toggle("show");
                });

                // Затваряне при клик извън sidebar-а
                document.addEventListener("click", function (e) {
                    if (
                        sidebar.classList.contains("show") &&
                        !sidebar.contains(e.target) &&
                        !toggleButton.contains(e.target)
                    ) {
                        sidebar.classList.remove("show");
                    }
                });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>