@model Cinema.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<style>
    /* --- Page Background --- */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', sans-serif;
        background: url('/images/pngtree-light-effect-particles-moving-starry-sky-background-picture-image_1439238.jpg') no-repeat center center fixed;
        background-size: cover;
        color: #fff;
    }

    /* --- Container / Overlay --- */
    .page-container {
        background: rgba(30, 30, 30, 0.9);
        padding: 30px;
        border-radius: 12px;
        margin: 20px auto;
        max-width: 700px;
        box-shadow: 0 0 20px rgba(214, 169, 77, 0.3);
    }

    /* --- Heading --- */
    h1 {
        font-size: 2rem;
        background: linear-gradient(90deg, #d6a94d, #e8b958, #f5d38c);
        -webkit-background-clip: text !important;
        background-clip: text !important;
        color: transparent !important;
        -webkit-text-fill-color: transparent !important;
        text-shadow: 0 0 6px #d6a94d, 0 0 12px #e8b958;
        margin-bottom: 20px;
        text-align: center;
    }

    /* --- Movie Title --- */
    .movie-title {
        font-size: 1.4rem;
        margin-bottom: 15px;
        color: #e8b958;
        text-align: center;
    }

    /* --- Definition List --- */
    dl {
        margin: 0;
        padding: 0;
    }

    dt {
        font-weight: bold;
        color: #d6a94d;
        margin-top: 12px;
    }

    dd {
        margin-left: 0;
        margin-bottom: 12px;
        padding-left: 5px;
    }

    /* --- Divider --- */
    .divider {
        border: none;
        border-top: 1px solid rgba(214, 169, 77, 0.3);
        margin: 10px 0;
    }

    /* --- Poster --- */
    .poster {
        margin-top: 10px;
        max-height: 220px;
        border-radius: 8px;
        border: 1px solid #d6a94d;
        box-shadow: 0 0 12px rgba(214, 169, 77, 0.4);
    }

    /* --- Buttons --- */
    .btn-gold, .btn-dark {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 8px;
        border: 1px solid #e3ae42;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        transition: 0.3s;
        margin-right: 10px;
    }

    .btn-gold {
        background-color: #d6a94d;
        color: #000 !important;
    }

        .btn-gold:hover {
            background-color: #e8b958;
        }

    .btn-dark {
        background-color: transparent;
        color: #d6a94d !important;
    }

        .btn-dark:hover {
            background-color: #d6a94d;
            color: #000 !important;
        }
</style>

<div class="page-container fade-in">
    <h1>Movie Details</h1>

    <h4 class="movie-title">@Model.Title</h4>
    <hr class="divider" />

    <dl>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>
    <hr class="divider" />

    <dl>
        <dt>Genre</dt>
        <dd>@Model.Genre?.Name</dd>
    </dl>
    <hr class="divider" />

    <dl>
        <dt>Duration</dt>
        <dd>@Model.Duration.ToString(@"h\:mm") h.</dd>
    </dl>
    <hr class="divider" />

    <dl>
        <dt>Release Date</dt>
        <dd>@Model.ReleaseDate.ToString("dd.MM.yyyy")</dd>
    </dl>
    <hr class="divider" />

    <dl>
        <dt>Poster</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <img src="@Model.PosterUrl" alt="Poster" class="poster" />
            }
            else
            {
                <span>No poster available.</span>
            }
        </dd>
    </dl>

    <div style="margin-top:20px; text-align:center;">
        @if (ViewBag.IsAdminView == true)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-gold">Edit</a>
        }
        <a asp-action="Index" class="btn-dark">Back to List</a>
    </div>
</div>