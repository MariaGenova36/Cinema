@model IEnumerable<Cinema.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Movie
    </a>
</p>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-3">
        <select name="genreId" class="form-control" asp-items="(SelectList)ViewBag.Genres">
            <option value="">-- All genres --</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
    <div class="col-md-3">
        <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
    </div>
</form>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["TitleSort"]"
                   asp-route-search="@ViewData["CurrentFilter"]"
                   asp-route-genreId="@ViewData["CurrentGenre"]">
                    Title @if (ViewData["CurrentSort"]?.ToString().StartsWith("title") == true)
                    {
                        <span class="@(ViewData["CurrentSort"].ToString().EndsWith("asc") ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                    }
                </a>
            </th>
            <th>Description</th>
            <th>Genre</th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["DurationSort"]"
                   asp-route-search="@ViewData["CurrentFilter"]"
                   asp-route-genreId="@ViewData["CurrentGenre"]">
                    Duration @if (ViewData["CurrentSort"]?.ToString().StartsWith("duration") == true)
                    {
                        <span class="@(ViewData["CurrentSort"].ToString().EndsWith("asc") ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                    }
                </a>
            </th>
            <th>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["ReleaseSort"]"
                   asp-route-search="@ViewData["CurrentFilter"]"
                   asp-route-genreId="@ViewData["CurrentGenre"]">
                    Release Date @if (ViewData["CurrentSort"]?.ToString().StartsWith("release") == true)
                    {
                        <span class="@(ViewData["CurrentSort"].ToString().EndsWith("asc") ? "bi bi-caret-up-fill" : "bi bi-caret-down-fill")"></span>
                    }
                </a>
            </th>
            <th>Poster</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Genre?.Name</td>
                <td>@item.Duration.ToString(@"h\:mm") ч.</td>
                <td>@item.ReleaseDate.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.PosterUrl))
                    {
                        <img src="@item.PosterUrl" alt="Poster" style="height:100px" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>