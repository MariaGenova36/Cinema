@model IEnumerable<Cinema.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/movies.css" />

<div class="overlay py-5">
    <div class="container text-center fade-in">
        <h1 class="cinema-title mb-4">Our Movies</h1>

        <p>
            @if (ViewBag.IsAdminView == true)
            {
                <a asp-action="Create" class="btn btn-create mb-4">Create New Movie</a>
            }
        </p>

        <form method="get" class="search-form d-flex mb-5 align-items-center gap-2 justify-content-center flex-wrap">
            <input type="text" name="search" value="@ViewData["CurrentFilter"]" placeholder="Search..." />

            <select name="genreId" asp-items="(SelectList)ViewBag.Genres">
                <option value="">All genres</option>
            </select>

            <button type="submit" class="btn btn-action">Search / Filter</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </form>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var movie in Model)
            {
                <div class="col">
                    <div class="card movie-card h-100 text-white">
                        @if (!string.IsNullOrEmpty(movie.PosterUrl))
                        {
                            <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title Poster">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text flex-grow-1">@movie.Description</p>
                            <p class="mb-1"><strong>Genre:</strong> @movie.Genre?.Name</p>
                            <p class="mb-1"><strong>Duration:</strong> @movie.Duration.ToString(@"h\:mm") h.</p>
                            <p class="mb-3"><strong>Release:</strong> @movie.ReleaseDate.ToString("dd.MM.yyyy")</p>
                            <div>
                                @if (ViewBag.IsAdminView == true)
                                {
                                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-create">Details</a>
                                    <a asp-area="Admin" asp-controller="Movies" asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-create me-1">Edit</a>
                                    <a asp-area="Admin" asp-controller="Movies" asp-action="Delete" asp-route-id="@movie.Id" class="btn btn-sm btn-create me-1">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bottom film strip for cinematic effect -->
    <div class="film-strip bottom mt-5"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}