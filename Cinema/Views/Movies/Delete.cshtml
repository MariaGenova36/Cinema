@model Cinema.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this movie?</h3>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Genre</dt>
        <dd class="col-sm-10">@Model.Genre?.Name</dd>

        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Duration.ToString(@"h\:mm") ч.</dd>

        <dt class="col-sm-2">Release Date</dt>
        <dd class="col-sm-10">@Model.ReleaseDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Poster</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.PosterUrl))
            {
                <img src="@Model.PosterUrl" alt="Poster" style="max-height:200px;" />
            }
            else
            {
                <span>No poster available.</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
