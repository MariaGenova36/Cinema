@model Cinema.Models.Hall

@{
    ViewData["Title"] = "Delete Hall";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* --- Page Background --- */
    body {
        margin: 0 !important;
        padding: 0 !important;
        font-family: 'Segoe UI', sans-serif !important;
        background: url('/images/pngtree-light-effect-particles-moving-starry-sky-background-picture-image_1439238.jpg') no-repeat center center fixed !important;
        background-size: cover !important;
        color: #fff !important;
    }

    /* --- Container --- */
    .page-container {
        background: rgba(30, 30, 30, 0.9) !important;
        padding: 30px !important;
        border-radius: 12px !important;
        margin: 30px auto !important;
        max-width: 600px !important;
        box-shadow: 0 0 20px rgba(214, 169, 77, 0.3) !important;
    }

    /* --- Headings --- */
    h1 {
        font-size: 2rem !important;
        text-align: center !important;
        background: linear-gradient(90deg, #d6a94d, #e8b958, #f5d38c) !important;
        -webkit-background-clip: text !important;
        background-clip: text !important;
        color: transparent !important;
        -webkit-text-fill-color: transparent !important;
        text-shadow: 0 0 6px #d6a94d, 0 0 12px #e8b958 !important;
        margin-bottom: 20px !important;
    }

    /* --- Details List --- */
    dl.row dt {
        font-weight: bold !important;
        color: #d6a94d !important;
    }

    dl.row dd {
        margin-bottom: 10px !important;
    }

    /* --- Buttons --- */
    .btn-delete, .btn-cancel {
        display: inline-block !important;
        width: auto !important;
        padding: 8px 16px !important;
        border-radius: 8px !important;
        font-weight: bold !important;
        cursor: pointer !important;
        text-align: center !important;
        text-decoration: none !important;
        transition: 0.3s !important;
        margin-right: 5px !important;
        border: 1px solid #e3ae42 !important;
    }

    .btn-delete {
        display: inline-block !important;
        width: auto !important;
        padding: 8px 16px !important;
        border-radius: 8px !important;
        border: 1px solid #e3ae42 !important;
        background-color: #d6a94d !important;
        color: #000 !important;
        font-weight: bold !important;
        cursor: pointer !important;
        transition: 0.3s !important;
        text-align: center !important;
    }

        .btn-delete:hover {
            background-color: #e8b958 !important;
        }

    .btn-cancel {
        background-color: transparent !important;
        color: #d6a94d !important;
    }

        .btn-cancel:hover {
            background-color: #d6a94d !important;
            color: #000 !important;
        }
</style>

<div class="page-container fade-in">
    <h1>Delete Hall</h1>

    <h4>Are you sure you want to delete this?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Rows</dt>
        <dd class="col-sm-10">@Model.Rows</dd>

        <dt class="col-sm-2">Columns</dt>
        <dd class="col-sm-10">@Model.Columns</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-delete" />
        <a asp-action="Index" class="btn-cancel">Cancel</a>
    </form>
</div>
