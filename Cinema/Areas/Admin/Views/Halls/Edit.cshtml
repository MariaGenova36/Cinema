@model Cinema.Models.Hall

@{
    ViewData["Title"] = "Edit Hall";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* --- Page Background --- */
    body {
        margin: 0 !important;
        padding: 0 !important;
        font-family: 'Segoe UI', sans-serif !important;
        background: url('/images/pngtree-light-effect-particles-moving-starry-sky-background-picture-image_1439238.jpg') no-repeat center center fixed !important;
        background-size: cover !important;
        color: #fff !important;
    }

    /* --- Container --- */
    .page-container {
        background: rgba(30, 30, 30, 0.9) !important;
        padding: 30px !important;
        border-radius: 12px !important;
        margin: 30px auto !important;
        max-width: 600px !important;
        box-shadow: 0 0 20px rgba(214, 169, 77, 0.3) !important;
    }

    /* --- Headings --- */
    h1 {
        font-size: 2rem !important;
        text-align: center !important;
        background: linear-gradient(90deg, #d6a94d, #e8b958, #f5d38c) !important;
        -webkit-background-clip: text !important;
        background-clip: text !important;
        color: transparent !important;
        -webkit-text-fill-color: transparent !important;
        text-shadow: 0 0 6px #d6a94d, 0 0 12px #e8b958 !important;
        margin-bottom: 20px !important;
    }

    /* --- Form Elements --- */
    .form-group {
        margin-bottom: 15px !important;
    }

    label {
        color: #d6a94d !important;
        font-weight: bold !important;
    }

    input {
        width: 100% !important;
        padding: 10px !important;
        border: 1px solid #d6a94d !important;
        border-radius: 8px !important;
        background-color: #1e1e1e !important;
        color: #fff !important;
    }

        input:focus {
            outline: none !important;
            border-color: #e8b958 !important;
            box-shadow: 0 0 8px rgba(214, 169, 77, 0.5) !important;
        }

    /* --- Validation --- */
    .text-danger {
        color: #ff4d4d !important;
        font-size: 0.9rem !important;
    }

    /* --- Buttons --- */
    .btn-save, .btn-back {
        display: inline-block !important;
        width: auto !important;
        padding: 10px 20px !important;
        border-radius: 8px !important;
        font-weight: bold !important;
        cursor: pointer !important;
        text-align: center !important;
        text-decoration: none !important;
        transition: 0.3s !important;
        margin-right: 5px !important;
        border: 1px solid #e3ae42 !important;
    }

    .btn-save {
        background-color: #d6a94d !important;
        color: #000 !important;
    }

        .btn-save:hover {
            background-color: #e8b958 !important;
        }

    .btn-back {
        background-color: transparent !important;
        color: #d6a94d !important;
    }

        .btn-back:hover {
            background-color: #d6a94d !important;
            color: #000 !important;
        }
</style>

<div class="page-container fade-in">
    <h1>Edit Hall</h1>

    <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Rows"></label>
            <input asp-for="Rows" />
            <span asp-validation-for="Rows" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Columns"></label>
            <input asp-for="Columns" />
            <span asp-validation-for="Columns" class="text-danger"></span>
        </div>

        <input type="submit" value="Save" class="btn-save" />
        <a asp-action="Index" class="btn-back">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}