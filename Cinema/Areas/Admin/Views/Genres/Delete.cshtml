@model Cinema.Models.Genre

@{
    ViewData["Title"] = "Delete Genre";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* --- Page Background --- */
    body {
        margin: 0 !important;
        padding: 0 !important;
        font-family: 'Segoe UI', sans-serif !important;
        background: url('/images/pngtree-light-effect-particles-moving-starry-sky-background-picture-image_1439238.jpg') no-repeat center center fixed !important;
        background-size: cover !important;
        color: #fff !important;
    }

    /* --- Container --- */
    .page-container {
        background: rgba(30, 30, 30, 0.9) !important;
        padding: 30px !important;
        border-radius: 12px !important;
        margin: 20px auto !important;
        max-width: 500px !important;
        box-shadow: 0 0 20px rgba(214, 169, 77, 0.3) !important;
    }

    /* --- Headings --- */
    h1, h3 {
        text-align: center !important;
        margin-bottom: 20px !important;
    }

    h1 {
        font-size: 2rem !important;
        background: linear-gradient(90deg, #d6a94d, #e8b958, #f5d38c) !important;
        -webkit-background-clip: text !important;
        -webkit-text-fill-color: transparent !important;
        text-shadow: 0 0 6px #d6a94d, 0 0 12px #e8b958 !important;
    }

    /* --- Definition List --- */
    dl dt {
        color: #d6a94d !important;
        font-weight: bold !important;
    }

    dl dd {
        margin-bottom: 15px !important;
    }

    /* --- Buttons --- */
    button.btn-delete {
        display: inline-block !important;
        width: auto !important;
        padding: 10px 20px !important;
        border-radius: 8px !important;
        border: 1px solid #e3ae42 !important;
        background-color: #d6a94d !important;
        color: #000 !important;
        font-weight: bold !important;
        cursor: pointer !important;
        transition: 0.3s !important;
        text-align: center !important;
        margin-right: 10px !important;
    }

        button.btn-delete:hover {
            background-color: #e8b958 !important;
        }

    a.btn-back {
        display: inline-block !important;
        padding: 10px 20px !important;
        border-radius: 8px !important;
        border: 1px solid #d6a94d !important;
        background-color: transparent !important;
        color: #d6a94d !important;
        font-weight: bold !important;
        text-decoration: none !important;
        transition: 0.3s !important;
    }

        a.btn-back:hover {
            background-color: #d6a94d !important;
            color: #000 !important;
        }
</style>

<div class="page-container fade-in">
    <h1>Delete Genre</h1>
    <h3>Are you sure you want to delete this?</h3>

    <dl class="row">
        <dt class="col-sm-4">Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    <form asp-area="Admin" asp-controller="Genres" asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn-delete">Delete</button>
        <a asp-area="Admin" asp-controller="Genres" asp-action="Index" class="btn-back">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
